<tr>
    <td><%= number + 1 %></td>
    <td><%= results.title %></td>
    <td class="content"><%= results.description %></td>

    <% if (results.active == 1) { %>
        <td><a href="<%= '/thread/' + results.short_url %>"><%= base_url +"/thread/"+ results.short_url %></a></td>
    <% } else { %>
        <td><%= results.short_url %></td>
    <% } %>

    <td>
        <form action="/profile/thread/<%= results.short_url %>" method="GET">
            <button>Edit</button>
        </form>
    </td>

    <td><%= results.views %></td>
    <td><%= results.likes %></td>
    <td><%= results.created_date %></td>
    <td><%= results.updated_date %></td>

    <% if (results.active == 1) { %>
        <form action="/profile/update/thread/active/<%= results.thread_id %>" method="post">
            <td> <input type="checkbox" name="checkbox" onchange="this.form.submit()" checked> </td>
        </form>
    <% } else { %>
        <form action="/profile/update/thread/active/<%= results.thread_id %>" method="post">
            <td> <input type="checkbox" name="checkbox" onchange="this.form.submit()"> </td>
        </form>
    <% } %>
</tr>